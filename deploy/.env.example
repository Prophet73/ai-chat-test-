# .env.example - Пример конфигурации AI Chat
# Скопируйте в .env и заполните значениями

# === Flask ===
FLASK_SECRET_KEY="your-secret-key-here-change-in-production"
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# === Google Gemini API ===
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL_NAME="gemini-2.5-flash"

# === OAuth2 (Hub) ===
# URL где развёрнут Hub (SSO провайдер)
HUB_BASE_URL="https://ai-hub.svrd.ru"

# OAuth2 credentials (получить в Hub Admin -> Applications)
HUB_CLIENT_ID="hub_your_client_id"
HUB_CLIENT_SECRET="your_client_secret"

# URL этого приложения (AI Chat)
# Для локальной разработки: http://localhost:5001
# Для продакшена: https://ai-chat.svrd.ru
APP_BASE_URL="https://ai-chat.svrd.ru"

# === Режим разработки ===
# true - пропускать авторизацию (только для разработки!)
# false - требовать авторизацию через Hub (для продакшена)
DEV_MODE=false
